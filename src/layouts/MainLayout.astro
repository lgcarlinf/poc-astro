---
import "../styles/global.css";
import { pathWithBase } from "../utils/index";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={pathWithBase("/favicon.svg")} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-800 text-slate-100 m-auto max-w-3xl">
    <main class="mt-10">
      <slot />
    </main>
  </body>
</html>
