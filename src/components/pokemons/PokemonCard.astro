---
import { pathWithBase } from "../../utils";

interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split("/").slice(-2)[0];

const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
  href={pathWithBase(`/pokemons/${name}`)}
  class:list={[
    "rounded flex flex-col justify-center items-center p-2 ",
    { "bg-[#111111]": !isBig },
  ]}
>
  <img
    transition:name={`${name}-image`}
    class:list={[{ "w-64 h-64": isBig, "w-22 h-22": !isBig }]}
    src={imageSrc}
    alt={name}
  />
  <span class:list={["capitalize", { "text-4xl text-blue-300": isBig }]}>
    # {id} {name}</span
  >
</a>
